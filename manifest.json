{
  "manifest_version": 3,
  "name": "Chat-AI",
  "description": "design by Shiva",
  "version": "0.0.0",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/chat*"
      ],
      "js": [
        "content-scripts/scraper.js",
        "content-scripts/themes.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "themes/none.css"
      ],
      "matches": [
        "https://chat.openai.com/*"
      ],
      "use_dynamic_url": true
    }
  ],
  "action": {
    "default-title": "ChatGPT History"
  },
  "icons": {
    "48": "/icons/48x48.png",
    "128": "/icons/128x128.png"
  }
}